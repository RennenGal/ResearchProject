# Environment configuration for Protein Data Collector
# Copy this file to .env and modify the values as needed

# Environment
ENVIRONMENT=development

# Database Configuration
# For SQLite (recommended)
DATABASE_TYPE=sqlite
DATABASE_PATH=db/protein_data.db

# For MySQL (alternative)
# DATABASE_TYPE=mysql
# DATABASE_HOST=localhost
# DATABASE_PORT=3306
# DATABASE_NAME=protein_collector
# DATABASE_USER=protein_user
# DATABASE_PASSWORD=

# API Configuration
INTERPRO_BASE_URL=https://www.ebi.ac.uk/interpro/api/
UNIPROT_BASE_URL=https://rest.uniprot.org/

# Retry Configuration
MAX_RETRIES=3
INITIAL_DELAY=1.0
BACKOFF_MULTIPLIER=2.0
MAX_DELAY=60.0

# Rate Limiting
INTERPRO_REQUESTS_PER_SECOND=10.0
UNIPROT_REQUESTS_PER_SECOND=5.0



# Collection Configuration
BATCH_SIZE=100
CACHE_TTL_HOURS=24

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Port Configuration
API_PORT=8000

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0

# Security (for production)
# API_KEY=your-secret-api-key
# JWT_SECRET=your-jwt-secret
# CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com